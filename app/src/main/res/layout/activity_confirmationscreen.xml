<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".Confirmationscreen">

    <androidx.cardview.widget.CardView
        android:layout_width="371dp"
        android:layout_height="398dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:outlineAmbientShadowColor="#0A2980"
        android:outlineSpotShadowColor="#11369E"
        app:cardBackgroundColor="#EDE1D2"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536">

        <TextView
            android:id="@+id/status"
            android:layout_width="78dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:gravity="fill"
            android:text="Status..."
            android:textColor="#3949AB"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/yes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:visibility="invisible"
                app:srcCompat="@drawable/ic_baseline_check_circle_25" />

            <ImageView
                android:id="@+id/no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_baseline_cancel_24" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView31"
            android:layout_width="78dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="70dp"
            android:gravity="fill"
            android:text="Date"
            android:textColor="#3949AB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/datetextview"
            android:layout_width="198dp"
            android:layout_height="29dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="Loading...."
            android:textColor="#3949AB"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Department"
            android:textColor="#3949AB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/departmenttextview"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Loading...."
            android:textColor="#3949AB"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="110dp"
            android:gravity="fill"
            android:text="Time"
            android:textColor="#3949AB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="150dp"
            android:gravity="fill"
            android:text="Name"
            android:textColor="#3949AB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="230dp"
            android:gravity="fill"
            android:text="Address"
            android:textColor="#3949AB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/timetextview"
            android:layout_width="198dp"
            android:layout_height="32dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:text="Loading...."
            android:textColor="#3949AB"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/clinicnametextview"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="180dp"
            android:gravity="fill"
            android:text="Loading...."
            android:textColor="#3949AB"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/addresstextview"
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="260dp"
            android:text="Loading...."
            android:textColor="#3949AB"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/cancelbookingtextview"
            android:layout_width="150dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="330dp"
            android:background="#3949AB"
            android:clickable="true"
            android:gravity="center"
            android:onClick="cancelbooking"
            android:text="CANCEL BOOKING"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/viewlocationtextview"
            android:layout_width="150dp"
            android:layout_height="39dp"
            android:layout_marginStart="210dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="330dp"
            android:background="#3949AB"
            android:clickable="true"
            android:gravity="center"
            android:onClick="viewlocation"
            android:text="VIEW LOCATION"
            android:textColor="#F2F3F6"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="46dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3949AB"
            android:backgroundTint="#3949AB"
            android:gravity="center"
            android:text="Pending/Cancelled"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="408dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:background="#1081B8"
        android:minHeight="?attr/actionBarSize"
        android:outlineAmbientShadowColor="#851111"
        android:outlineSpotShadowColor="#B32323"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextColor="#FFFFFF"
        app:title="Appointment"
        app:titleTextColor="#FFFFFF" />
</androidx.constraintlayout.widget.ConstraintLayout>